# Environment Configuration
# Copy this file to .env and fill in your values

# ─── Pinecone (Vector Database) ──────────────────────────
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=face-recognisation
PINECONE_HOST=https://your-index-host.pinecone.io
PINECONE_USE_POD=true
PINECONE_ENV=us-west1-gcp
PINECONE_POD_TYPE=p1.x1
PINECONE_DIMENSION=512
PINECONE_METRIC=cosine

# ─── Flask ───────────────────────────────────────────────
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_PORT=5000
SECRET_KEY=change-this-to-a-random-secret

# ─── Face Recognition Tuning ────────────────────────────
FACE_MIN_SCORE=0.35
FACE_RATIO_THRESHOLD=0.18
FACE_ADAPTIVE_LR=0.05
FACE_DEVICE=cpu

# ─── Email / SMTP (for OTP verification) ────────────────
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
